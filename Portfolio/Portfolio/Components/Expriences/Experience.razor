@using Portfolio.Services
<Row Margin="Margin.Is4.FromTop">
    <Column ColumnSize="ColumnSize.Is1.OnDesktop.IsAuto.OnMobile"></Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.Is3.OnDesktop" Class="align-self-center">
        @if (ImagePath != string.Empty) {
            <Tooltip Text="@CompanyName">
                <img src="@ImagePath" alt="@($"{CompanyName} logo")" id="logo"/>
            </Tooltip>
        }
        else {
            <Heading Size="HeadingSize.Is3" Alignment="TextAlignment.Center">
                @CompanyName
            </Heading>
        }

    </Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.Is4.OnDesktop" Class="align-self-center">
        <Heading Size="HeadingSize.Is4" Alignment="TextAlignment.Center">@JobTitle</Heading>
    </Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.IsAuto.OnDesktop" Class="align-self-center">
        <Text Alignment="TextAlignment.Center">
            @JobStart.ToString("MM.yyyy") - @(JobEnd?.ToString("MM.yyyy") ?? "now")
        </Text>
    </Column>
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
</Row>
<Row Margin="Margin.Is3.FromTop">
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
    <Column >
        <Paragraph Alignment="TextAlignment.Justified">
            @JobDescription
        </Paragraph>
    </Column>
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
</Row>

@code {

    [Parameter]
    public string CompanyName { get; set; }

    [Parameter]
    public string JobTitle { get; set; }

    [Parameter]
    public DateTime JobStart { get; set; }

    [Parameter]
    public DateTime? JobEnd { get; set; }

    [Parameter]
    public string JobDescription { get; set; }

    private string ImagePath => CompanyImageService.GetImagePath(CompanyName);
}